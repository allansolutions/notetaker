{
  "name": "notetaker-api",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:preview": "wrangler deploy --env preview",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply notetaker",
    "db:migrate:local": "wrangler d1 migrations apply notetaker --local",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "setup-secrets": "node scripts/setup-secrets.js"
  },
  "dependencies": {
    "drizzle-orm": "^0.38.0",
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@vitest/coverage-istanbul": "^4.0.18",
    "drizzle-kit": "^0.30.0",
    "vitest": "^4.0.0",
    "wrangler": "^4.61.1"
  }
}
