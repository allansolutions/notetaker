./node_modules/.bin/eslint . < /dev/null

echo ""
./node_modules/.bin/tsc --noEmit < /dev/null

echo ""
# Run tests with coverage threshold check (80% minimum)
# This ensures new code has tests before it can be committed
npm run test:coverage
